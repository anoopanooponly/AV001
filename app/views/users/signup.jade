extends ../layouts/default
block content
    divdiv.well.span5.offset6#account-form-container
       form(action="/users", method="post")
        .control-group
          label.control-label(for='name') Full name
          .controls
            input.input-xlarge#name(type='text', name="name", placeholder='Full name', value=user.name)

        .control-group
          label.control-label(for='email') Email
          .controls
            input.input-xlarge#email(type='text', name="email", placeholder='Email', value=user.email)

        .control-group
          label.control-label(for='username') Username
          .controls
            input.input-xlarge#username(type='text', name="username", placeholder='Username', value=user.username)

        .control-group
          label.control-label(for='password') Password
          .controls
            input.input-xlarge#password(type='password', name="password", placeholder='Password')

        .form-actions
          button.btn.btn-primary(type='submit') Sign up
          &nbsp;
          | or&nbsp;
          a.show-login(href="/signin") login
